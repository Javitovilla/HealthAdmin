<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pacientes - HealthAdmin</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="dashboard">
        <!-- Header -->
        <header class="dashboard-header">
            <h1>HealthAdmin</h1>
            <nav class="nav-menu">
                <a href="/dashboard">Dashboard</a>
                <a href="/pacientes" class="active">Pacientes</a>
                <span class="usuario-info">
                    <%= usuario.nombre %> (<%= usuario.rol === 'administrativo' ? 'Administrativo' : 'Asistencial' %>)
                </span>
                <a href="/logout" class="btn-logout">Cerrar Sesión</a>
            </nav>
        </header>

        <!-- Main Content -->
        <main class="dashboard-main">
            <div class="page-header">
                <h2>Gestión de Pacientes</h2>
                <a href="/pacientes/nuevo" class="btn btn-primary">Nuevo Paciente</a>
            </div>

            <!-- Barra de búsqueda -->
            <div class="search-bar">
                <form action="/pacientes/buscar" method="GET">
                    <input 
                        type="text" 
                        name="busqueda" 
                        placeholder="Buscar por nombre o documento..."
                        class="search-input"
                    >
                    <button type="submit" class="btn btn-search">Buscar</button>
                </form>
            </div>

            <!-- Mensaje de confirmación -->
            <% if (mensaje) { %>
                <div class="alert alert-success">
                    <%= mensaje %>
                </div>
            <% } %>

            <!-- Tabla de pacientes -->
            <div class="table-container">
                <% if (pacientes.length === 0) { %>
                    <p class="no-data">No hay pacientes registrados</p>
                <% } else { %>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Nombre Completo</th>
                                <th>Documento</th>
                                <th>Teléfono</th>
                                <th>Edad</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% pacientes.forEach(paciente => { %>
                                <tr>
                                    <td><%= paciente.nombreCompleto %></td>
                                    <td><%= paciente.tipoDocumento %>-<%= paciente.numeroDocumento %></td>
                                    <td><%= paciente.telefono %></td>
                                    <td><%= paciente.edad %> años</td>
                                    <td class="actions">
                                        <a href="/pacientes/<%= paciente._id %>" class="btn btn-sm btn-info">Ver</a>
                                        <a href="/pacientes/<%= paciente._id %>/editar" class="btn btn-sm btn-warning">Editar</a>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>

                    <!-- Paginación -->
                    <% if (totalPaginas > 1) { %>
                        <div class="pagination">
                            <% if (paginaActual > 1) { %>
                                <a href="/pacientes?pagina=<%= paginaActual - 1 %>" class="btn btn-sm">Anterior</a>
                            <% } %>
                            
                            <span class="page-info">Página <%= paginaActual %> de <%= totalPaginas %></span>
                            
                            <% if (paginaActual < totalPaginas) { %>
                                <a href="/pacientes?pagina=<%= paginaActual + 1 %>" class="btn btn-sm">Siguiente</a>
                            <% } %>
                        </div>
                    <% } %>
                <% } %>
            </div>
        </main>
    </div>
</body>
</html>