<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/navbar') %>

    <div class="container">
        <div class="page-header">
            <h2><i class="fas fa-users"></i> Gestión de Pacientes</h2>
            <a href="/pacientes/nuevo" class="btn btn-primary">
                <i class="fas fa-user-plus"></i> Nuevo Paciente
            </a>
        </div>

        <% if (mensaje) { %>
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i> <%= mensaje %>
            </div>
        <% } %>

        <form action="/pacientes/buscar" method="GET" class="search-bar">
            <input 
                type="text" 
                name="busqueda" 
                placeholder="Buscar por nombre o documento..."
            >
            <button type="submit">
                <i class="fas fa-search"></i> Buscar
            </button>
        </form>

        <div class="table-container">
            <% if (pacientes.length === 0) { %>
                <div class="empty-state">
                    <i class="fas fa-user-slash"></i>
                    <p>No hay pacientes registrados</p>
                </div>
            <% } else { %>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Nombre Completo</th>
                            <th>Documento</th>
                            <th>Teléfono</th>
                            <th>Edad</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% pacientes.forEach(paciente => { %>
                            <tr>
                                <td><%= paciente.nombreCompleto %></td>
                                <td><%= paciente.tipoDocumento %>-<%= paciente.numeroDocumento %></td>
                                <td><%= paciente.telefono %></td>
                                <td><%= paciente.edad %> años</td>
                                <td>
                                    <a href="/pacientes/<%= paciente._id %>" class="btn btn-sm btn-primary">
                                        <i class="fas fa-eye"></i> Ver
                                    </a>
                                    <a href="/pacientes/<%= paciente._id %>/editar" class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i> Editar
                                    </a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>

                <% if (totalPaginas > 1) { %>
                    <div class="pagination">
                        <% if (paginaActual > 1) { %>
                            <a href="/pacientes?pagina=<%= paginaActual - 1 %>">
                                <i class="fas fa-chevron-left"></i> Anterior
                            </a>
                        <% } %>
                        
                        <span class="active">Página <%= paginaActual %> de <%= totalPaginas %></span>
                        
                        <% if (paginaActual < totalPaginas) { %>
                            <a href="/pacientes?pagina=<%= paginaActual + 1 %>">
                                Siguiente <i class="fas fa-chevron-right"></i>
                            </a>
                        <% } %>
                    </div>
                <% } %>
            <% } %>
        </div>
    </div>
</body>
</html>