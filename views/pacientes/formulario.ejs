<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= titulo %> - HealthAdmin</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="dashboard">
        <!-- Header -->
        <header class="dashboard-header">
            <h1>HealthAdmin</h1>
            <nav class="nav-menu">
                <a href="/dashboard">Dashboard</a>
                <a href="/pacientes">Pacientes</a>
                <span class="usuario-info">
                    <%= usuario.nombre %> (<%= usuario.rol === 'administrativo' ? 'Administrativo' : 'Asistencial' %>)
                </span>
                <a href="/logout" class="btn-logout">Cerrar Sesión</a>
            </nav>
        </header>

        <!-- Main Content -->
        <main class="dashboard-main">
            <div class="page-header">
                <h2><%= titulo %></h2>
                <a href="/pacientes" class="btn btn-secondary">Volver</a>
            </div>

            <!-- Mensaje de error -->
            <% if (error) { %>
                <div class="alert alert-error">
                    <%= error %>
                </div>
            <% } %>

            <!-- Formulario -->
            <div class="form-container">
                <form action="<%= paciente ? `/pacientes/${paciente._id}/editar` : '/pacientes/nuevo' %>" method="POST">
                    <div class="form-grid">
                        <!-- Nombre -->
                        <div class="form-group">
                            <label for="nombre">Nombre *</label>
                            <input 
                                type="text" 
                                id="nombre" 
                                name="nombre" 
                                required
                                value="<%= paciente ? paciente.nombre : '' %>"
                            >
                        </div>

                        <!-- Apellidos -->
                        <div class="form-group">
                            <label for="apellidos">Apellidos *</label>
                            <input 
                                type="text" 
                                id="apellidos" 
                                name="apellidos" 
                                required
                                value="<%= paciente ? paciente.apellidos : '' %>"
                            >
                        </div>

                        <!-- Tipo de Documento -->
                        <div class="form-group">
                            <label for="tipoDocumento">Tipo de Documento *</label>
                            <select id="tipoDocumento" name="tipoDocumento" required <%= paciente ? 'disabled' : '' %>>
                                <option value="">Seleccione...</option>
                                <option value="CC" <%= paciente && paciente.tipoDocumento === 'CC' ? 'selected' : '' %>>Cédula de Ciudadanía</option>
                                <option value="TI" <%= paciente && paciente.tipoDocumento === 'TI' ? 'selected' : '' %>>Tarjeta de Identidad</option>
                                <option value="CE" <%= paciente && paciente.tipoDocumento === 'CE' ? 'selected' : '' %>>Cédula de Extranjería</option>
                                <option value="PA" <%= paciente && paciente.tipoDocumento === 'PA' ? 'selected' : '' %>>Pasaporte</option>
                            </select>
                        </div>

                        <!-- Número de Documento -->
                        <div class="form-group">
                            <label for="numeroDocumento">Número de Documento *</label>
                            <input 
                                type="text" 
                                id="numeroDocumento" 
                                name="numeroDocumento" 
                                required
                                <%= paciente ? 'readonly' : '' %>
                                value="<%= paciente ? paciente.numeroDocumento : '' %>"
                            >
                        </div>

                        <!-- Fecha de Nacimiento -->
                        <div class="form-group">
                            <label for="fechaNacimiento">Fecha de Nacimiento *</label>
                            <input 
                                type="date" 
                                id="fechaNacimiento" 
                                name="fechaNacimiento" 
                                required
                                <%= paciente ? 'readonly' : '' %>
                                max="<%= new Date().toISOString().split('T')[0] %>"
                                value="<%= paciente ? paciente.fechaNacimiento.toISOString().split('T')[0] : '' %>"
                            >
                        </div>

                        <!-- Género -->
                        <div class="form-group">
                            <label for="genero">Género *</label>
                            <select id="genero" name="genero" required <%= paciente ? 'disabled' : '' %>>
                                <option value="">Seleccione...</option>
                                <option value="M" <%= paciente && paciente.genero === 'M' ? 'selected' : '' %>>Masculino</option>
                                <option value="F" <%= paciente && paciente.genero === 'F' ? 'selected' : '' %>>Femenino</option>
                                <option value="Otro" <%= paciente && paciente.genero === 'Otro' ? 'selected' : '' %>>Otro</option>
                            </select>
                        </div>

                        <!-- Teléfono -->
                        <div class="form-group">
                            <label for="telefono">Teléfono *</label>
                            <input 
                                type="tel" 
                                id="telefono" 
                                name="telefono" 
                                required
                                value="<%= paciente ? paciente.telefono : '' %>"
                            >
                        </div>

                        <!-- Email -->
                        <div class="form-group">
                            <label for="email">Email (opcional)</label>
                            <input 
                                type="email" 
                                id="email" 
                                name="email"
                                value="<%= paciente && paciente.email ? paciente.email : '' %>"
                            >
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">
                            <%= paciente ? 'Actualizar' : 'Registrar' %> Paciente
                        </button>
                        <a href="/pacientes" class="btn btn-secondary">Cancelar</a>
                    </div>
                </form>
            </div>
        </main>
    </div>
</body>
</html>