<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalle de Cita - HealthAdmin</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="dashboard">
        <!-- Header -->
        <header class="dashboard-header">
            <h1>HealthAdmin</h1>
            <nav class="nav-menu">
                <a href="/dashboard">Dashboard</a>
                <a href="/pacientes">Pacientes</a>
                <a href="/citas">Citas</a>
                <span class="usuario-info">
                    <%= usuario.nombre %> (<%= usuario.rol === 'administrativo' ? 'Administrativo' : 'Asistencial' %>)
                </span>
                <a href="/logout" class="btn-logout">Cerrar Sesión</a>
            </nav>
        </header>

        <!-- Main Content -->
        <main class="dashboard-main">
            <div class="page-header">
                <h2>Detalle de Cita</h2>
                <a href="/citas" class="btn btn-secondary">Volver</a>
            </div>

            <!-- Información de la cita -->
            <div class="detail-container">
                <div class="detail-card">
                    <h3>Información de la Cita</h3>
                    <div class="detail-grid">
                        <div class="detail-item">
                            <span class="detail-label">Fecha:</span>
                            <span class="detail-value"><%= cita.fecha.toLocaleDateString('es-CO', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %></span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Hora:</span>
                            <span class="detail-value"><%= cita.hora %></span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Estado:</span>
                            <span class="detail-value">
                                <span class="badge badge-<%= cita.estado %>">
                                    <%= cita.estado === 'pendiente' ? 'Pendiente' : cita.estado === 'atendida' ? 'Atendida' : 'Cancelada' %>
                                </span>
                            </span>
                        </div>
                        <div class="detail-item full-width">
                            <span class="detail-label">Motivo de Consulta:</span>
                            <span class="detail-value"><%= cita.motivoConsulta %></span>
                        </div>
                    </div>
                </div>

                <div class="detail-card">
                    <h3>Información del Paciente</h3>
                    <div class="detail-grid">
                        <div class="detail-item">
                            <span class="detail-label">Nombre:</span>
                            <span class="detail-value"><%= cita.paciente.nombreCompleto %></span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Documento:</span>
                            <span class="detail-value"><%= cita.paciente.tipoDocumento %>-<%= cita.paciente.numeroDocumento %></span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Teléfono:</span>
                            <span class="detail-value"><%= cita.paciente.telefono %></span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Edad:</span>
                            <span class="detail-value"><%= cita.paciente.edad %> años</span>
                        </div>
                    </div>
                    <div style="margin-top: 15px;">
                        <a href="/pacientes/<%= cita.paciente._id %>" class="btn btn-sm btn-info">Ver Perfil Completo</a>
                    </div>
                </div>

                <div class="detail-card">
                    <h3>Personal Asistencial</h3>
                    <div class="detail-grid">
                        <div class="detail-item">
                            <span class="detail-label">Médico Asignado:</span>
                            <span class="detail-value"><%= cita.medicoAsignado.nombre %></span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Registrado por:</span>
                            <span class="detail-value"><%= cita.usuarioCreador.nombre %></span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Fecha de Registro:</span>
                            <span class="detail-value"><%= cita.fechaCreacion.toLocaleString('es-CO') %></span>
                        </div>
                    </div>
                </div>

                <!-- Acciones -->
                <% if (cita.estado === 'pendiente') { %>
                    <div class="detail-card">
                        <h3>Acciones</h3>
                        <div style="display: flex; gap: 10px;">
                            <form action="/citas/<%= cita._id %>/estado" method="POST">
                                <input type="hidden" name="estado" value="atendida">
                                <button type="submit" class="btn btn-success">Marcar como Atendida</button>
                            </form>
                            <form action="/citas/<%= cita._id %>/estado" method="POST">
                                <input type="hidden" name="estado" value="cancelada">
                                <button type="submit" class="btn btn-danger">Cancelar Cita</button>
                            </form>
                        </div>
                    </div>
                <% } %>
            </div>
        </main>
    </div>
</body>
</html>