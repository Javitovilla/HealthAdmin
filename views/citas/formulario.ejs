<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/navbar') %>

    <div class="container">
        <div class="page-header">
            <h2><i class="fas fa-calendar-plus"></i> <%= titulo %></h2>
            <a href="/citas/dia" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
        </div>

        <% if (error) { %>
            <div class="alert alert-error">
                <i class="fas fa-exclamation-circle"></i> <%= error %>
            </div>
        <% } %>

        <div class="form-card">
            <form action="/citas/nueva" method="POST" id="formCita">
                <div class="form-group">
                    <label for="busquedaPaciente">
                        <i class="fas fa-search"></i> Buscar Paciente *
                    </label>
                    <input 
                        type="text" 
                        id="busquedaPaciente" 
                        placeholder="Buscar por nombre o documento..."
                        autocomplete="off"
                    >
                    <div id="resultadosBusqueda" style="position: relative; z-index: 10;"></div>
                    <input type="hidden" name="pacienteId" id="pacienteId" required>
                    <div id="pacienteSeleccionado"></div>
                </div>

                <div class="form-group">
                    <label for="especialidad">
                        <i class="fas fa-stethoscope"></i> Especialidad Médica *
                    </label>
                    <select id="especialidad" name="especialidad" required>
                        <option value="">Seleccione una especialidad...</option>
                        <% especialidades.forEach(esp => { %>
                            <option value="<%= esp %>"><%= esp %></option>
                        <% }); %>
                    </select>
                </div>

                <div class="form-group">
                    <label for="medico">
                        <i class="fas fa-user-md"></i> Médico *
                    </label>
                    <select id="medico" name="medicoAsignado" required disabled>
                        <option value="">Primero seleccione una especialidad...</option>
                    </select>
                    <small style="color: #666; display: block; margin-top: 5px;">
                        <i class="fas fa-info-circle"></i> Seleccione una especialidad para ver los médicos disponibles
                    </small>
                </div>

                <div class="form-group">
                    <label for="fecha">
                        <i class="fas fa-calendar"></i> Fecha *
                    </label>
                    <input 
                        type="date" 
                        id="fecha" 
                        name="fecha" 
                        required
                        min="<%= new Date().toISOString().split('T')[0] %>"
                    >
                </div>

                <div class="form-group">
                    <label for="hora">
                        <i class="fas fa-clock"></i> Hora *
                    </label>
                    <select id="hora" name="hora" required>
                        <option value="">Seleccione una hora...</option>
                        <% horarios.forEach(horario => { %>
                            <option value="<%= horario %>"><%= horario %></option>
                        <% }); %>
                    </select>
                </div>

                <div class="form-group">
                    <label for="motivoConsulta">
                        <i class="fas fa-notes-medical"></i> Motivo de Consulta *
                    </label>
                    <textarea 
                        id="motivoConsulta" 
                        name="motivoConsulta" 
                        rows="4" 
                        required
                        placeholder="Describa el motivo de la consulta..."
                    ></textarea>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-calendar-check"></i> Agendar Cita
                    </button>
                    <a href="/citas/dia" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>

    <script src="/js/citas.js"></script>
</body>
</html>