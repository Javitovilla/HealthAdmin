<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/navbar') %>

    <div class="container">
        <div class="page-header">
            <h2><i class="fas fa-calendar"></i> Todas las Citas</h2>
            <div>
                <a href="/citas/nueva" class="btn btn-success">
                    <i class="fas fa-calendar-plus"></i> Nueva Cita
                </a>
                <a href="/citas/dia" class="btn btn-primary">
                    <i class="fas fa-calendar-day"></i> Citas del Día
                </a>
            </div>
        </div>

        <% if (mensaje) { %>
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i> <%= mensaje %>
            </div>
        <% } %>

        <!-- FILTROS AGREGADOS -->
        <div class="search-bar">
            <form action="/citas/lista" method="GET" style="display: flex; gap: 10px; align-items: center;">
                <input 
                    type="date" 
                    name="fecha" 
                    value="<%= filtros.fecha || '' %>"
                    style="flex: 1; padding: 10px; border: 2px solid #e0e0e0; border-radius: 8px;"
                >
                
                <select 
                    name="estado"
                    style="flex: 1; padding: 10px; border: 2px solid #e0e0e0; border-radius: 8px;"
                >
                    <option value="">Todos los estados</option>
                    <option value="pendiente" <%= filtros.estado === 'pendiente' ? 'selected' : '' %>>Pendiente</option>
                    <option value="atendida" <%= filtros.estado === 'atendida' ? 'selected' : '' %>>Atendida</option>
                    <option value="cancelada" <%= filtros.estado === 'cancelada' ? 'selected' : '' %>>Cancelada</option>
                </select>
                
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-filter"></i> Filtrar
                </button>
                
                <a href="/citas/lista" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Limpiar
                </a>
            </form>
        </div>

        <% if (citas.length === 0) { %>
            <div class="empty-state">
                <i class="fas fa-calendar-times"></i>
                <p>No hay citas registradas</p>
            </div>
        <% } else { %>
            <div class="table-container">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Fecha</th>
                            <th>Hora</th>
                            <th>Paciente</th>
                            <th>Médico</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% citas.forEach(cita => { %>
                            <tr>
                                <td><%= new Date(cita.fecha).toLocaleDateString('es-CO') %></td>
                                <td><strong><%= cita.hora %></strong></td>
                                <td><%= cita.paciente.nombreCompleto %></td>
                                <td><%= cita.medicoAsignado.nombre %></td>
                                <td>
                                    <span class="status-badge status-<%= cita.estado %>">
                                        <%= cita.estado %>
                                    </span>
                                </td>
                                <td>
                                    <a href="/citas/<%= cita._id %>" class="btn btn-sm btn-primary">
                                        <i class="fas fa-eye"></i> Ver
                                    </a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>

            <!-- PAGINACIÓN -->
            <% if (totalPaginas > 1) { %>
                <div class="pagination">
                    <% if (paginaActual > 1) { %>
                        <a href="/citas/lista?pagina=<%= paginaActual - 1 %><%= filtros.fecha ? '&fecha=' + filtros.fecha : '' %><%= filtros.estado ? '&estado=' + filtros.estado : '' %>">
                            Anterior
                        </a>
                    <% } %>
                    
                    <% for (let i = 1; i <= totalPaginas; i++) { %>
                        <% if (i === paginaActual) { %>
                            <span class="active"><%= i %></span>
                        <% } else { %>
                            <a href="/citas/lista?pagina=<%= i %><%= filtros.fecha ? '&fecha=' + filtros.fecha : '' %><%= filtros.estado ? '&estado=' + filtros.estado : '' %>">
                                <%= i %>
                            </a>
                        <% } %>
                    <% } %>
                    
                    <% if (paginaActual < totalPaginas) { %>
                        <a href="/citas/lista?pagina=<%= paginaActual + 1 %><%= filtros.fecha ? '&fecha=' + filtros.fecha : '' %><%= filtros.estado ? '&estado=' + filtros.estado : '' %>">
                            Siguiente
                        </a>
                    <% } %>
                </div>
            <% } %>
        <% } %>
    </div>
</body>
</html>