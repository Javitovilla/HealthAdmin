<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/navbar') %>

    <div class="container">
        <div class="page-header">
            <h2>
                <i class="fas fa-calendar-day"></i> 
                Citas del Día - <%= fecha.toLocaleDateString('es-CO', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %>
            </h2>
            <div>
                <a href="/citas/nueva" class="btn btn-success">
                    <i class="fas fa-calendar-plus"></i> Agendar Cita
                </a>
                <a href="/citas/lista" class="btn btn-secondary">
                    <i class="fas fa-list"></i> Ver Todas
                </a>
            </div>
        </div>

        <% if (mensaje) { %>
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i> <%= mensaje %>
            </div>
        <% } %>

        <% if (citas.length === 0) { %>
            <div class="empty-state">
                <i class="fas fa-calendar-times"></i>
                <p>No hay citas programadas para hoy</p>
            </div>
        <% } else { %>
            <div class="table-container">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Hora</th>
                            <th>Paciente</th>
                            <th>Documento</th>
                            <th>Médico</th>
                            <th>Motivo</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% citas.forEach(cita => { %>
                            <tr>
                                <td><strong><%= cita.hora %></strong></td>
                                <td><%= cita.paciente.nombreCompleto %></td>
                                <td><%= cita.paciente.tipoDocumento %>-<%= cita.paciente.numeroDocumento %></td>
                                <td><%= cita.medicoAsignado.nombre %></td>
                                <td><%= cita.motivoConsulta.substring(0, 50) %>...</td>
                                <td>
                                    <span class="status-badge status-<%= cita.estado %>">
                                        <%= cita.estado === 'pendiente' ? 'Pendiente' : cita.estado === 'atendida' ? 'Atendida' : 'Cancelada' %>
                                    </span>
                                </td>
                                <td>
                                    <a href="/citas/<%= cita._id %>" class="btn btn-sm btn-primary">
                                        <i class="fas fa-eye"></i> Ver
                                    </a>
                                    <% if (cita.estado === 'pendiente') { %>
                                        <form action="/citas/<%= cita._id %>/estado" method="POST" style="display: inline;">
                                            <input type="hidden" name="estado" value="atendida">
                                            <button type="submit" class="btn btn-sm btn-success">
                                                <i class="fas fa-check"></i> Atender
                                            </button>
                                        </form>
                                    <% } %>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } %>
    </div>
</body>
</html>