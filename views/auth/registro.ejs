<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - HealthAdmin</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <%- include('../partials/navbar') %>
    
    <div class="container">
        <div class="page-header">
            <h2>üë§ <%= title %></h2>
        </div>

        <% if (error) { %>
            <div class="alert alert-error">
                <%= error %>
            </div>
        <% } %>

        <div class="form-card">
            <form action="/auth/registro" method="POST" id="formUsuario">
                
                <!-- Informaci√≥n Personal -->
                <h3 style="margin-bottom: 20px; color: #2c3e50; border-bottom: 2px solid #06B6D4; padding-bottom: 10px;">
                    üìã Informaci√≥n Personal
                </h3>

                <div class="form-group">
                    <label for="nombre">Nombre Completo *</label>
                    <input 
                        type="text" 
                        id="nombre" 
                        name="nombre" 
                        placeholder="Ej: Juan P√©rez Garc√≠a"
                        required
                    >
                </div>

                <div class="form-group">
                    <label for="cedula">C√©dula *</label>
                    <input 
                        type="text" 
                        id="cedula" 
                        name="cedula" 
                        placeholder="Ej: 1234567890"
                        required
                    >
                </div>

                <div class="form-group">
                    <label for="telefono">Tel√©fono *</label>
                    <input 
                        type="tel" 
                        id="telefono" 
                        name="telefono" 
                        placeholder="Ej: 3001234567"
                        required
                    >
                </div>

                <!-- Informaci√≥n de Acceso -->
                <h3 style="margin: 30px 0 20px; color: #2c3e50; border-bottom: 2px solid #06B6D4; padding-bottom: 10px;">
                    üîê Informaci√≥n de Acceso
                </h3>

                <div class="form-group">
                    <label for="email">Correo Electr√≥nico *</label>
                    <input 
                        type="email" 
                        id="email" 
                        name="email" 
                        placeholder="usuario@ejemplo.com"
                        required
                    >
                    <small style="color: #666;">Este ser√° el correo para iniciar sesi√≥n</small>
                </div>

                <div class="form-group">
                    <label for="password">Contrase√±a *</label>
                    <input 
                        type="password" 
                        id="password" 
                        name="password" 
                        placeholder="M√≠nimo 6 caracteres"
                        required
                        minlength="6"
                    >
                </div>

                <!-- Informaci√≥n Laboral -->
                <h3 style="margin: 30px 0 20px; color: #2c3e50; border-bottom: 2px solid #06B6D4; padding-bottom: 10px;">
                    üíº Informaci√≥n Laboral
                </h3>

                <div class="form-group">
                    <label for="rol">Rol en el Sistema *</label>
                    <select id="rol" name="rol" required>
                        <option value="">-- Seleccione un rol --</option>
                        <option value="administrativo">Administrativo</option>
                        <option value="medico">M√©dico</option>
                        <option value="asistencial">Personal Asistencial (Enfermer√≠a)</option>
                    </select>
                </div>

                <!-- Campo de Especialidad (Solo para m√©dicos) -->
                <div class="form-group" id="especialidadGroup" style="display: none;">
                    <label for="especialidad">Especialidad M√©dica *</label>
                    <select id="especialidad" name="especialidad">
                        <option value="">-- Seleccione especialidad --</option>
                        <option value="Medicina General">Medicina General</option>
                        <option value="Pediatr√≠a">Pediatr√≠a</option>
                        <option value="Ginecolog√≠a y Obstetricia">Ginecolog√≠a y Obstetricia</option>
                        <option value="Cardiolog√≠a">Cardiolog√≠a</option>
                        <option value="Medicina Interna">Medicina Interna</option>
                        <option value="Ortopedia y Traumatolog√≠a">Ortopedia y Traumatolog√≠a</option>
                        <option value="Dermatolog√≠a">Dermatolog√≠a</option>
                        <option value="Neurolog√≠a">Neurolog√≠a</option>
                        <option value="Psiquiatr√≠a">Psiquiatr√≠a</option>
                        <option value="Oftalmolog√≠a">Oftalmolog√≠a</option>
                    </select>
                </div>

                <!-- Campo de Cargo (Solo para personal asistencial) -->
                <div class="form-group" id="cargoGroup" style="display: none;">
                    <label for="cargo">Cargo *</label>
                    <select id="cargo" name="cargo">
                        <option value="">-- Seleccione cargo --</option>
                        <option value="Enfermera Jefe">Enfermera Jefe</option>
                        <option value="Enfermera">Enfermera</option>
                        <option value="Auxiliar de Enfermer√≠a">Auxiliar de Enfermer√≠a</option>
                    </select>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">üíæ Guardar Usuario</button>
                    <a href="/auth/usuarios/lista" class="btn btn-secondary">‚ùå Cancelar</a>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Mostrar/ocultar campos seg√∫n el rol seleccionado
        const rolSelect = document.getElementById('rol');
        const especialidadGroup = document.getElementById('especialidadGroup');
        const especialidadSelect = document.getElementById('especialidad');
        const cargoGroup = document.getElementById('cargoGroup');
        const cargoSelect = document.getElementById('cargo');

        rolSelect.addEventListener('change', function() {
            const rol = this.value;

            // Resetear campos
            especialidadGroup.style.display = 'none';
            cargoGroup.style.display = 'none';
            especialidadSelect.removeAttribute('required');
            cargoSelect.removeAttribute('required');
            especialidadSelect.value = '';
            cargoSelect.value = '';

            // Mostrar campo seg√∫n rol
            if (rol === 'medico') {
                especialidadGroup.style.display = 'block';
                especialidadSelect.setAttribute('required', 'required');
            } else if (rol === 'asistencial') {
                cargoGroup.style.display = 'block';
                cargoSelect.setAttribute('required', 'required');
            }
        });

        // Validaci√≥n antes de enviar
        document.getElementById('formUsuario').addEventListener('submit', function(e) {
            const rol = rolSelect.value;
            
            if (rol === 'medico' && !especialidadSelect.value) {
                e.preventDefault();
                alert('Por favor seleccione una especialidad m√©dica');
                return false;
            }

            if (rol === 'asistencial' && !cargoSelect.value) {
                e.preventDefault();
                alert('Por favor seleccione un cargo');
                return false;
            }
        });
    </script>
</body>
</html>