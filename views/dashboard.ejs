<!-- views/dashboard.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - HealthAdmin</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="dashboard">
        <header class="dashboard-header">
            <h1>HealthAdmin</h1>
            <nav class="nav-menu">
                <a href="/dashboard" class="active">Dashboard</a>
                <a href="/pacientes">Pacientes</a>
                <a href="/citas">Citas</a>
                <span class="usuario-info">
                    <%= usuario.nombre %> 
                    (<%= usuario.rol === 'administrativo' ? 'Administrativo' : 'Asistencial' %>)
                </span>
                <a href="/logout" class="btn-logout">Cerrar Sesión</a>
            </nav>
        </header>

        <main class="dashboard-main">
            <h2>Bienvenido al Sistema</h2>
            <p>Has iniciado sesión correctamente.</p>
            
            <div class="dashboard-stats">
                <div class="stat-card">
                    <h3>Módulos Disponibles</h3>
                    <ul style="list-style: none; padding: 0;">
                        <li style="margin: 10px 0;"><a href="/pacientes">📋 Gestión de Pacientes</a></li>
                        <li style="margin: 10px 0;"><a href="/citas/dia">📅 Citas del Día</a></li>
                        <li style="margin: 10px 0;"><a href="/citas">🗓️ Todas las Citas</a></li>
                        <li style="margin: 10px 0;"><a href="/citas/agendar">➕ Agendar Nueva Cita</a></li>
                    </ul>
                </div>
            </div>
        </main>
    </div>
</body>
</html>